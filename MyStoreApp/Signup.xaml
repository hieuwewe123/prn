<Window x:Class="MyStoreApp.Signup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreApp"
        mc:Ignorable="d"
        Title="Signup" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Full Name" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Email Address" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
            <TextBlock Text="Confirm Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>
            <Button Content="Sign Up" />
        </StackPanel>
    </Grid>
</Window>
